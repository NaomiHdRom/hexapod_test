                  <param name="initial_value">${initial_positions['leg6_jointA']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="leg6_jointB">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['leg6_jointB']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="leg6_jointC">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['leg6_jointC']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
